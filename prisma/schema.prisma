generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String @db.VarChar(50)
  email String
  user_status Int
  registers Register[]
  clients Client[]
}

model City {
  id Int @id @default(autoincrement())
  name String @db.VarChar(50)
  registers Register[]
}

model Branch {
  id Int @id @default(autoincrement())
  name String @db.VarChar(50)
  registers Register[]
}

model Register {
  id Int @id @default(autoincrement())
  name String
  city City @relation(fields: [cityId], references: [id])
  cityId Int
  branch Branch @relation(fields: [branchId], references: [id])
  branchId Int
  phone String @db.VarChar(12)
  text String @db.VarChar(255)
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  user User @relation(fields: [userId], references: [id])
  userId Int
}

model Client {
  id Int @id @default(autoincrement())
  name String @db.VarChar(50)
  status String @db.VarChar(50)
  phone String @db.VarChar(12)
  nationality String @db.VarChar(50)
  maritalStatus String @db.VarChar(50)
  mother String @db.VarChar(50)
  father String @db.VarChar(50)
  rg String @db.VarChar(50)
  cpf String @db.VarChar(50)
  cityBirth String @db.VarChar(50)
  stateBirth String @db.VarChar(50)
  urlImg String
  process String @db.VarChar(20)
  address Json
  documents Json
  comments Json
  user User @relation(fields: [userId], references: [id])
  userId Int
}
