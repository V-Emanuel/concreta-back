generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id Int @id @default(autoincrement())
  name String @db.VarChar(50)
  email String @unique
  password String 
  userStatus Int
  registers register[]
  clients client[]
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model city {
  id Int @id @default(autoincrement())
  name String @db.VarChar(50)
  registers register[]
}

model branch {
  id Int @id @default(autoincrement())
  name String @db.VarChar(50)
  registers register[]
}

model register {
  id Int @id @default(autoincrement())
  name String
  city city @relation(fields: [cityId], references: [id])
  cityId Int
  branch branch @relation(fields: [branchId], references: [id])
  branchId Int
  phone String @db.VarChar(12)
  text String @db.VarChar(255)
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  user user @relation(fields: [userId], references: [id])
  userId Int
}

model client {
  id Int @id @default(autoincrement())
  name String @db.VarChar(50)
  status String @db.VarChar(50)
  phone String @db.VarChar(12)
  nationality String @db.VarChar(50)
  maritalStatus String @db.VarChar(50)
  mother String @db.VarChar(50)
  father String @db.VarChar(50)
  rg String @db.VarChar(50)
  cpf String @db.VarChar(50)
  cityBirth String @db.VarChar(50)
  stateBirth String @db.VarChar(50)
  urlImg String
  process String @db.VarChar(20)
  address Json
  documents Json
  comments Json
  user user @relation(fields: [userId], references: [id])
  userId Int
}
